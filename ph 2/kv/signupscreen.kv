<SignupScreen>:
    FloatLayout:
        Label:
            text: "Create an Account"
            size_hint: 1, .1
            pos_hint: {"top": 1, "center_x": 0.5}
            font_size: "20sp"

        TextInput:
            id: email_input
            hint_text: "Enter your GMU email"
            size_hint: .8, .1
            pos_hint: {"center_x": 0.5, "top": 0.85}
            multiline: False

        TextInput:
            id: username_input
            hint_text: "Create a Username"
            size_hint: .8, .1
            pos_hint: {"center_x": 0.5, "top": 0.72}
            multiline: False

        TextInput:
            id: password_input
            hint_text: "Create a Password"
            password: True
            size_hint: .8, .1
            pos_hint: {"center_x": 0.5, "top": 0.59}
            multiline: False

        Button:
            text: "Sign Up"
            size_hint: .8, .1
            pos_hint: {"center_x": 0.5, "top": 0.46}
            on_release: app.sign_up(email_input.text, username_input.text, password_input.text)

        Label:
            id: message_label
            text: ""
            size_hint: 1, .1
            pos_hint: {"top": 0.35, "center_x": 0.5}
            color: 1, 0, 0, 1
